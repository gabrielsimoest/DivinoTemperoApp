<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <!-- Botão de Voltar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/arrow_back_ios_24px"
        android:iconTint="@android:color/white"
        android:text="Voltar"
        android:textColor="@android:color/white"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Voltar"
        app:iconPadding="8dp"
        android:padding="8dp" />

    <!-- Imagem do Item -->
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Imagem do item"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/background_gradient"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clipToOutline="true"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="4dp"
        android:outlineProvider="background" />

    <!-- Container Vertical para o Texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/itemImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nome do Item -->
        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            tools:text="Nome do Item"
            android:paddingBottom="8dp"/>

        <!-- Descrição do Item -->
        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp"
            tools:text="Descrição detalhada do item." />

        <!-- Preço do Item -->
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorAccent"
            android:paddingTop="8dp"
            android:gravity="center"
            tools:text="R$ 99,99" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
